#!/usr/bin/env python3

import frontmatter
import glob
import dateutil.parser
import datetime
from slugify import slugify
import pyperclip

# Function to check key 
def checkKey(dict, key):
	if key in dict.keys():
		key = dict[key]
		return key
	else:
		key = f"No {key} chosen"
		return key


post = frontmatter.load('/home/wadeallen/Dropbox/Textbits/video-data.txt')
title = checkKey(post, 'title')
summary = checkKey(post, 'summary')
pyperclip.copy(title)
pyperclip.copy(summary)







