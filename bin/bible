#!/bin/bash

if [ -f $HOME/.dmenurc ]; then
  . $HOME/.dmenurc
else
  DMENU='dmenu -i'
fi

PASSAGE=`cat /home/wadeallen/Dropbox/books.txt | $DMENU -p Scripture:\  $*`
PASSAGE_REF=${PASSAGE// /+}

if [ -z "$PASSAGE" ]; then
  exit
else
  i3-msg workspace 10:"${PASSAGE}" &
  chromium --new-window "https://www.biblegateway.com/passage/?search=${PASSAGE_REF}&version=NIV&interface=print"
fi

# notify-send ${PASSAGE_REF} "${PASSAGE}" --icon=dialog-information
