#!/usr/bin/env python3

import webbrowser
from datetime import date
from dateutil.relativedelta import relativedelta, TU
import urltools
import subprocess
import pyperclip
import sys
from datetime import datetime, timedelta
import calendar

dow_format = "%A, %B %-d"
date_format = "%B %-d"

today = datetime.today()
year = int(today.strftime("%Y"))
month = int(today.strftime("%-m"))

first_day_of_month = datetime(year, month, 1)
first_monday = first_day_of_month + timedelta(days=((0-calendar.monthrange(year,month)[0])+7)%7)
# 0 is monday of week
next_wednesday = first_monday + timedelta(days=9)
third_monday = first_monday + timedelta(days=14)

meeting_date = third_monday.strftime(date_format)
wednesday = next_wednesday.strftime(dow_format)

email_address = 'officestaff@uccdga.org, chairs@uccdga.org'

subject = f"Reports due {wednesday} for the {meeting_date} OB Meeting"

message=f"Hello Staff and Committee Chairs,%0a%0a\
I wanted to remind you to get your reports to Carolyn (carolyn.russell@uccdga.org) by {wednesday}, \
for the {meeting_date} Offical Board meeting.%0a%0aCarolyn will email the compiled reports to the Offical Board on \
Friday, so they will have time to read them before the {meeting_date} meeting.%0a%0aAlso, please let \
Carolyn know if you have an item for the full agenda.\
%0a%0aBlessings,%0a%0aWade"

url = 'https://mail.google.com/mail/?view=cm&fs=1&to=' + email_address + '&su=' + subject + '&body=' + message

webbrowser.open(url)




