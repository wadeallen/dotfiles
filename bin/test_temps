#!/usr/bin/env python3

from requests import get
import config
import json	

home_url = 'https://home.wadeallen.me/api/states'
church_url = 'https://church.wadeallen.me/api/states'
church_key = config.ha_api
home_key = config.home_ha_api
church_headers = {
    'Authorization': f'Bearer {church_key}',
    'content-type': 'application/json',
}
home_headers = {
    'Authorization': f'Bearer {home_key}',
    'content-type': 'application/json',
}

church_response = get(church_url, headers=church_headers)
church_data = json.loads(church_response.text)
print(church_response.text)
