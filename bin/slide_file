#!/usr/bin/env python3

import os
import subprocess
import shutil
import datetime
from os.path import expanduser
from dateutil.relativedelta import relativedelta, SU


today = datetime.date.today()
# sunday = today + datetime.timedelta( (6-today.weekday()) % 7 )
sunday = today + relativedelta(weekday=SU(+1))
home = expanduser("~")

sermon_file = home + "/Documents/Sermon_Work/" + sunday.strftime('%Y-%m-%d') + "_sermon.md"
slide_file = home + "/Documents/Sermon_Work/" + sunday.strftime('%Y-%m-%d') + "_slides.md"

with open(sermon_file) as f_in, open(slide_file, "w") as f_out :
    for row in f_in.readlines()[:4] :
        f_out.write(row)

with open(slide_file, "a") as myfile:
    myfile.write("---\n\n")



