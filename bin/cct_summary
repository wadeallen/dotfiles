#!/bin/bash

filename=$1

if	[ -z "$filename" ]
then
	echo "Please enter the CCT Notes file"
	exit 0
fi

fileroot=$(echo ${filename%.*})

pandoc $filename -o ${fileroot}_CCT.pdf --template=minutes.tex --variable=month:`date +%B` --variable=year:`date +%Y` --variable=monthdigit:`date +%m` --variable=cct:true
cp ${fileroot}_CCT.pdf ~/Print/${fileroot}_CCT.pdf
