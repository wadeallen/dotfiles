#!/bin/bash

filename=$1

if	[ -z "$filename" ]
then
	echo "Please enter the CCT Notes file"
	exit 0
fi

fileroot=$(echo ${filename%.*})


pandoc $filename -o CCT_Private/${fileroot}_PRIVATE.pdf --template=minutes.tex --variable=month:`date +%B` --variable=year:`date +%Y` --variable=monthdigit:`date +%m` --variable=cct:true

pandoc $filename -o Congregation/${fileroot}_Congregation.pdf --template=minutes.tex --variable=month:`date +%B` --variable=year:`date +%Y` --variable=monthdigit:`date +%m` --variable=cct:false

