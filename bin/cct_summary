#!/bin/bash


DIRECTORY=$HOME/Dropbox/Administration/CCT_Summaries/2020

filename=$1

if	[ -z "$filename" ]
then
	echo "Please enter the CCT Notes file"
	exit 0
fi

fileroot=$(echo ${filename%.*})

# wget -O cct.csv https://docs.google.com/spreadsheets/d/1kh_tGFIdmzwqxuNObYjfC3hiUduSKwS60-768Z1BKoo/export?format=csv &&

/usr/bin/pandoc $DIRECTORY/$filename -o $DIRECTORY/CCT_Private/${fileroot}_PRIVATE.pdf --template=minutes.tex --variable=month:`date +%B` --variable=year:`date +%Y` --variable=monthdigit:`date +%m` --variable=cct:true

/usr/bin/pandoc $DIRECTORY/$filename -o $DIRECTORY/Congregation/${fileroot}_Congregation.pdf --template=minutes.tex --variable=month:`date +%B` --variable=year:`date +%Y` --variable=monthdigit:`date +%m` --variable=cct:false

s3cmd put Congregation/${fileroot}_Congregation.pdf s3://reports.fbcmuncie.org/