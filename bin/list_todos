#!/bin/bash

source /home/wadeallen/bin/config.sh

if [[ $(curl -s https://api.todoist.com/rest/v1/tasks?filter=today -H "Authorization: Bearer $token" | jq -r ".[] | .content") ]]; then
    curl -s https://api.todoist.com/rest/v1/tasks?filter=today -H "Authorization: Bearer $token" | jq -r ".[] | .content"
else
    echo "Nothing to do!"
fi


