#! /bin/bash

file=$1
fileroot=$(echo ${file%.*})
current_year=`date +'%Y'`
directory="/home/wadeallen/Dropbox/Staff_Meetings"

tuesday=$(date -d "next Tuesday" +"%Y-%m-%d")
tuesday_format=$(date -d "next Tuesday" +"%B %d, %Y")
next_week=$(date -d "next Tuesday + 1 week" +"%B %d, %Y")

pandoc ${directory}/${tuesday}_staff_meeting.md -o ${directory}/${tuesday}_agenda.pdf --template staff_meeting.tex --metadata date_format="${tuesday_format}" --metadata next_week="${next_week}"


