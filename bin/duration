#!/usr/bin/env sh

filename=$1

if	[ -z "$filename" ]
then
	echo "Please enter a filename. The only arg is the filename"
	exit 0
fi

duration=`exiftool -Duration $1 | awk '{ print $3 }'`
bytes=`wc -c $1 | awk '{ print $1 }'`

echo -e "layout: sermon\ncategory: video\nduration: '${duration}' \nlength: ${bytes}\nvideo_url: " > ~/Documents/Textbits/duration.txt

# echo "duration: '$duration'"
# echo "length: $bytes"
# echo "copied to clipboard"
echo "copied duration data to Documents/Textbits/duration.txt file"
