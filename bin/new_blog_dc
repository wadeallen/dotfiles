#!/usr/bin/env python3

import datetime
from os.path import expanduser
import os
import os.path
import subprocess

home = expanduser("~")
today = datetime.datetime.now().strftime("%Y-%m-%d")
filename =(home + '/Dropbox/Drafts/' + today + '.markdown')

target = open (filename, 'w')
target.write("---\ntitle: \ndate: {}\nlayout: post\n---\n \n ".format(today))
target.close()

