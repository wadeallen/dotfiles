#!/usr/bin/env python3

from os.path import expanduser
import os
import os.path
import subprocess
from urllib.request import urlopen
from slugify import slugify
from titlecase import titlecase

home = expanduser("~")

area = input('Name of the area: ')
coordinator = input('Name of Area Coordinator: ')
slug = slugify(area)
filename =(home + '/Sites/fbc-wiki/docs/areas/' + slug + '.md' )

target = open (filename, 'w')
target.write("---\nlayout: area\ntitle: {}\nParent: Ministry Areas\nnav_order: 2\ncoordinator: {}\npermalink: /area/{}\n---\n\n".format(titlecase(area), titlecase(coordinator), slug.lower()))
target.close()
