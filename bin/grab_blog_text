#!/usr/bin/env python3

from datetime import date
from dateutil.relativedelta import relativedelta, MO, TU
import glob
import frontmatter
import sys
import pyperclip
import subprocess

format = "%B %d"
path_format = "%Y-%m-%d"
today = date.today()
last_mon = today + relativedelta(weekday=MO(-1))
last_tue = today + relativedelta(weekday=TU(-1))

path = "/home/wadeallen/Sites/fbcmuncie_2020/content/blog/*.md"
files = (glob.glob(path))
for name in files:
	post = frontmatter.load(name)
	post_date = (post['date'])
	content = (post)
	if post_date == last_mon:
		print(content)
	elif post_date == last_tue:
		print(content)




