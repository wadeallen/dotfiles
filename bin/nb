#!/usr/bin/env python3

import datetime
from os.path import expanduser, isfile
import subprocess

home = expanduser("~")
today = datetime.datetime.now().strftime("%Y-%m-%d")
filename =(home + '/Dropbox/Drafts/' + today + '.markdown')

if isfile(filename):
  subprocess.call(['nvim', '-c', '9', filename])
else:	
    target = open (filename, 'w')
    target.write(f'---\ntitle: \ndate: {today}\npeople: \n   - Wade Allen\n---')
    target.close()

subprocess.call(['nvim', '-c', '9', filename])
